<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    OniLearn
    <small>Quản lý</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">   
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tác vụ chính</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-3 col-sm-6 col-xs-12" style="margin-bottom: 10px">
                    <%= link_to categories_path, class: "btn btn-app", style: "width: 90%" do %>
                        <i class="fa fa-play"></i>
                        Quản lý chuyên ngành
                    <% end %>
                </div>
                <div class="col-lg-3 col-sm-6 col-xs-12" style="margin-bottom: 10px">
                    <%= link_to subjects_path, class: "btn btn-app", style: "width: 90%" do %>
                        <i class="fa fa-play"></i>
                        Quản lý môn học
                    <% end %>
                </div>
                <div class="col-lg-3 col-sm-6 col-xs-12" style="margin-bottom: 10px">
                    <%= link_to subjects_path, class: "btn btn-app", style: "width: 90%" do %>
                        <i class="fa fa-play"></i>
                        Quản lý chủ đề *
                    <% end %>
                </div>
                <div class="col-lg-3 col-sm-6 col-xs-12" style="margin-bottom: 10px">
                    <%= link_to users_path, class: "btn btn-app", style: "width: 90%" do %>
                        <i class="fa fa-play"></i>
                        Quản lý người dùng
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>