<p id="notice"><%= notice %></p>

<h1>Các môn học</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">#</th>
      <th colspan="2">Tên</th>
      <th colspan="1">Chuyên ngành</th>
      <th colspan="1">Số chủ đề</th>
      <th colspan="3">Thao tác</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each_with_index do |subject, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td>
          <% if subject.image? %>
            <%= image_tag subject.image.thumb.url %>
          <% else %>
            <%= image_tag 'subject.png', size: '20x20'%>
          <% end %>
        </td>        
        <td><%= subject.name %></td>
        <td><%= subject.category_id %></td>
        <td><%= subject.courses.all.size %></td>
        <% if admin_signed_in? && !current_admin.nil? %>
          <td><%= link_to 'Chỉnh sửa', edit_subject_path(subject) %></td>
        <% end %>
        <td><%= link_to 'Xem các chủ đề', subject_courses_path(subject) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @subjects, theme: 'twitter-bootstrap-4', outer_window: 3 %>

<br>
<% if !@action %>
  <%= link_to 'Thêm môn học', new_category_subject_path %> |
  <%= link_to 'Trở về', categories_path %>
<% end %>
