<p id="notice"><%= notice %></p>

<p>
  <strong>Nội dung:</strong>
  <%= @question.content %> <br/>
  <strong>Loại:</strong>
  <%= @question.multichoice %>
  <% if @question.multichoice == true %>
    Multichoice
  <% else %>
    True/False
  <% end %>
</p>


<p>
  <strong>Câu trả lời:</strong> <br/>
  <% @question.answers.each do |ans| %>
    <%= ans.content %>
    <%= ans.is_right %>
    <br/>
  <% end %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', course_questions_path(@question.course_id) %>
