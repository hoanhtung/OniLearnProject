<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    OniLearn
    <small>Quản lý người dùng</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li class="active">Người dùng</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">   
  <div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Danh sách người dùng</h3>
        <% if admin_signed_in? && !current_admin.nil? %>
          <div class="box-tools pull-right"> 
            <%= link_to 'Tạo mới', new_user_path, class: 'btn btn-sm btn-primary' %>
            <%#= link_to 'Tạo mới', new_user_path, class: 'btn btn-sm btn-primary', data: { toggle: 'modal', target: '#modal' } %>
          </div>
        <% end %>
    </div>
    <!-- Result search -->
    <% if flash[:noti_empty] != "empty" %>
      <div class="box-body">
      <table class="table table-consider table-striped">
        <thead>
          <tr>
            <th style="width: 5%">#</th>
            <th style="width: 30%">Tên</th>
            <th style="width: 30%">Email</th>
            <th style="text-align: right">Tác vụ</th>
          </tr>
        </thead>
      
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td style="text-align: right">
                <%= link_to 'Xem', user, class: "btn btn-sm btn-default" %>
                <%= link_to 'Sửa', edit_user_path(user), class: "btn btn-sm btn-default" %>
                <%= link_to 'Xóa', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%#= paginate @users, theme: 'twitter-bootstrap-4', outer_window: 3 %>
      </div>
    <% end %>
  </div>
</section>
