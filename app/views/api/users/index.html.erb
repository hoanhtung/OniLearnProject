<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    OniLearn
    <small>Quản lý người dùng</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li class="active">Người dùng</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">   
  <div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Danh sách người dùng</h3>
    </div>
    <!-- Result search -->
    <% if @users.all.size != 0 %>
      <% if flash[:noti_empty] != "empty" %>
        <div class="box-body">
        <table class="table table-consider table-striped">
          <thead>
            <tr>
              <th style="width: 5%">#</th>
              <th style="width: 20%">Tên</th>
              <th style="width: 25%">Email</th>
              <th style="width: 20%">Ngày tham gia</th>
              <th style="width: 15%">Số bài kiểm tra</th>
              <th style="width: 15%; text-align: right">Tác vụ</th>
            </tr>
          </thead>
        
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%b %d, %Y") %></td>
                <td><%= user.exams.all.size %></td>
                <td style="text-align: right">
                  <%= link_to 'Xem các bài kiểm tra', user_exams_path(user.id), class: "btn btn-sm btn-default" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users, theme: 'twitter-bootstrap-4', outer_window: 3 %>
        </div>
      <% end %>
    <% else %>
      <p class="result_search">Chưa có người dùng nào</p>
    <% end %>
  </div>
</section>
