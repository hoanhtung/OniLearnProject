<h1>
  <% if @action != 'show_newest' %>
    <%= @subject.category.name %>/<%= @subject.name %>/
  <% end %>
  Các chủ đề
</h1>
<table>
  <thead>
    <tr>
      <th >#</th>
      <th colspan="2">Tên chủ đề</th>
      <th>Mô tả</th>
      <th>Loại</th>
      <th>Môn học</th>
      <th>Số câu hỏi</th>
      <th colspan="3">Thao tác</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each_with_index do |course, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td>
        <% if course.icon? %>
          <%= image_tag course.icon.thumb.url %>
        <% else %>
          <%= image_tag 'subject.png', size: '20x20'%>
        <% end %>
        </td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td>
          <% if course.type_course == true %>
            Multichoice
          <% elsif course.type_course == false %>
            True/False
          <% else%>
            N/A
          <% end %>
        </td>
        <td><%= course.subject.name %></td>
        <td><%= course.questions.all.size %></td>
        <% if admin_signed_in? && !current_admin.nil? %>
          <td><%= link_to 'Chỉnh sửa', edit_course_path(course), class: 'btn btn-sm btn-default', data: {toggle: 'modal', target: '#modal'} %></td>
        <% end %>
        <td><%= link_to 'Xem các câu hỏi', course_questions_path(course), class: 'btn btn-sm btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @courses, theme: 'twitter-bootstrap-4', outer_window: 3 %>
<br>
<% if admin_signed_in? && !current_admin.nil? %>
  <% if @action == 'show_newest' %>
    <%= link_to 'Thêm chủ đề', new_course_path, class: 'btn btn-sm btn-success', data: {toggle: 'modal', target: '#modal'} %>
  <% else %>
    <%= link_to 'Thêm chủ đề', new_subject_course_path, class: 'btn btn-sm btn-primary', data: {toggle: 'modal', target: '#modal'} %>
  <% end %>
<% end %>

