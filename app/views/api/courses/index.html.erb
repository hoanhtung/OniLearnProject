<p id="notice"><%= notice %></p>

<h1>Chủ đề</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Tên</th>
      <th colspan="3">Thao tác</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
        <% if course.icon? %>
          <%= image_tag course.icon.thumb.url %>
        <% end %>
        </td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Chỉnh sửa', edit_course_path(course) %></td>
        <td><%= link_to 'Xem các câu hỏi', course_questions_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Thêm chủ đề', new_subject_course_path %>
<%= link_to 'Trở về', category_subjects_path(@subject.category_id) %>

