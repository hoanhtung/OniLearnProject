<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    OniLearn
    <small>Quản lý chuyên ngành</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li class="active">Chuyên ngành</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">   
  <div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Danh sách chuyên ngành</h3>
        <div class="box-tools pull-right">
          <%= link_to 'Tạo mới', new_category_path, class: "btn btn-sm btn-primary" %>
        </div>
    </div>
    <div class="box-body">
      <table class="table table-consider table-striped dataTable">
        <thead>
          <tr>
            <th style="width: 10%">#</th>
            <th style="width: 50%; text-align: center">Tên</th>
            <th style="text-align: right">Tác vụ</th>
           </tr>
        </thead>
      
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>1</td>
              <td><%= category.name %></td>
              <td style="text-align: right">
                <%= link_to 'Xem', category_subjects_path(category), class: "btn btn-sm btn-default" %>
                <%= link_to 'Sửa', edit_category_path(category), class: "btn btn-sm btn-default" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @categories, theme: 'twitter-bootstrap-4', outer_window: 3 %>
    </div>
  </div>
</section>

<p id="notice"><%= notice %></p>
